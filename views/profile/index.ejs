<%- include('../layouts/head.ejs') %>

    <div class="row p-3">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <h3>
                <%= __('profile')%>
                    <%= __('update')%>
            </h3>
            <div class="row">
                <form method="post" action="/profile/update" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="exampleFormControlInput1" class="form-label">
                                    <%= __('register_form.fields.first_name')%>
                                </label>
                                <input type="text" name="first_name" value="<%= profileData.first_name %>"
                                    class="form-control" id="exampleFormControlInput1"
                                    placeholder="<%= __('register_form.placeholder.enter_first_name')%>">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="exampleFormControlInput2" class="form-label">
                                    <%= __('register_form.fields.last_name')%>
                                </label>
                                <input type="text" name="last_name" value="<%= profileData.last_name %>"
                                    class="form-control" id="exampleFormControlInput2"
                                    placeholder="<%= __('register_form.placeholder.enter_last_name')%>">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="exampleFormControlInput3" class="form-label">
                                    <%= __('register_form.fields.email')%>
                                </label>
                                <input type="email" name="email" value="<%= profileData.email %>" class="form-control"
                                    readonly disabled id="exampleFormControlInput3"
                                    placeholder="<%= __('register_form.placeholder.enter_email')%>" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="exampleFormControlInput4" class="form-label">
                                    <%= __('register_form.fields.mobile_number')%>
                                </label>
                                <input type="number" name="mobile_number" value="<%= profileData.mobile_number %>"
                                    class="form-control" id="exampleFormControlInput4"
                                    placeholder="<%= __('register_form.placeholder.enter_mobile_number')%>">
                            </div>
                        </div>
                        <div class="col-md-12">
                            <!-- display image -->
                            <div>
                                <img src="<%= profileData.image != null ? '/images/uploads/' + profileData.image : '/images/default-avatar.jpg' %>"
                                    alt="Profile Picture" width="80" height="80" style="border-radius:50%">
                            </div>

                            <div class="mb-3">
                                <label for="exampleFormControlInput5" class="form-label">
                                    Upload Profile
                                </label>
                                <input type="file" name="profile_image" class="form-control"
                                    id="exampleFormControlInput5" placeholder="Upload profile" accept="image/*">
                            </div>
                        </div>
                    </div>
                    <div class="d-flex">
                        <button class="btn btn-primary" type="submit">
                            <%= __('update')%>
                        </button>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-md-3"></div>
    </div>

    <%- include('../layouts/foot.ejs') -%>